{
  "compilerOptions": {
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2015"
  },
  "exclude": [
      "node_modules",
      "**/__tests__/*.ts"
  ]
}
